extends layout


block content
    .container
        form.form-signin(role="form" action="/")
            h2.form-signin-heading Please enter values
            .control-group
                label Value x:
                input.form-control(type="text" name="x" value=x )
            .control-group
                label Value y:
                input.form-control(type="text" name="y" value=y)
            .control-group
                label Sum:
                input.form-control(type="text" name="sum" value=sum readonly )
            .control-group
                label Product:
                input.form-control(type="text" name="prod" value=prod readonly )
            .control-group
                p #{error}
            button.btn.btn-lg.btn-primary(type="submit") Calculate
